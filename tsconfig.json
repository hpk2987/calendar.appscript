{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "es2022",
    "outDir": "./dist",
    "rootDir": "./src", 
    "module": "CommonJS",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}